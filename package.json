{
  "version": "0.0.0",
  "name": "dominion",
  "description": "Library for describing & applying DOM changes",
  "keywords": ["dom", "changelist", "worker", "html", "typed", "flow"],
  "main": "lib/DOMinion",
  "module": "src/DOMinion",
  "author": "Irakli Gozalishvili <rfobic@gmail.com> (http://jeditoolkit.com)",
  "repository": "https://github.com/Gozala/dominion",
  "license": "MIT",
  "devDependencies": {
    "alias-quokka-plugin": "^0.1.0",
    "babel-cli": "^6.26.0",
    "babel-preset-flow-node": "^1.0.2",
    "babel-register": "^6.26.0",
    "blue-tape": "^1.0.0",
    "documentation": "^5.3.2",
    "flatbuffers": "^1.7.0",
    "flow-bin": "^0.56.0",
    "flow-copy-source": "^1.2.1",
    "husky": "^0.14.0",
    "jsdom": "^11.2.0",
    "jsdom-quokka-plugin": "^1.0.6",
    "lint-staged": "^4.2.1",
    "prettier": "^1.7.0"
  },
  "scripts": {
    "test": "npm run test:flow && npm run test:tape",
    "test:tape": "blue-tape -r babel-register 'test/**/*.js'",
    "test:flow": "flow check",
    "build:clear": "rm -rf lib",
    "build:types": "flow-copy-source --verbose src lib",
    "build:node": "babel --out-dir lib src",
    "build:api": "documentation readme --section=API src/dominion.js",
    "build:docs":
      "documentation build --document-exported src/** -f html --o docs",
    "build:schema":
      "flatc --ts --no-fb-import src/Format/FlatBuffer/DOMinion.fbs && mv DOMinion_generated.ts src/Format/FlatBuffer/DOMinion.fbs.ts",
    "build": "npm run build:node && npm run build:types",
    "prepublish": "npm run build && npm test",
    "precommit": "lint-staged",
    "start":
      "flow-copy-source --watch --verbose src lib & babel --watch --out-dir lib src"
  },
  "lint-staged": {
    "*.js": ["prettier --parser flow --no-semi --write", "git add"]
  },
  "quokka": {
    "alias": {
      "dominion": "src/DOMinion"
    },
    "jsdom": {
      "html": "<html><body></body></html>"
    },
    "pro": true,
    "babel": true,
    "plugins": ["alias-quokka-plugin", "jsdom-quokka-plugin"]
  },
  "dependencies": {
    "dictionary.flow": "^0.1.0",
    "result.flow": "^0.2.0",
    "unreachable": "^0.2.0"
  }
}
